<apex:page controller="QuizPage" sidebar="false">
    <apex:form id="question_list">
        <apex:pageBlock title="Quiz">
            <div style="font-size: 20px;">
            <apex:repeat value="{!questions}" var="q">
                <apex:pageBlockSection >
                    <apex:outputText value="{!q.Question__c}" id="Question"/><br/>
                    <apex:selectRadio layout="pageDirection" value="{!radiovalue}">
                        <apex:selectOption itemValue="A" itemLabel="A:  {!q.A__c}" />
                        <apex:selectOption itemValue="B" itemLabel="B: {!q.B__c}" />
                        <apex:selectOption itemValue="C" itemLabel="C: {!q.C__c}" />
                        <apex:selectOption itemValue="D" itemLabel="D: {!q.D__c}" />
                    </apex:selectRadio>
					<!--
                    <apex:outputText value="A"/>
                    <apex:commandButton action="{!Nxtbtn}" reRender="question_list" value="{!q.A__c}" styleClass="buttonStyle" style="background:LightBlue;width:150px;"/>
                    <apex:outputText value="B"/>
                    <apex:commandButton action="{!Nxtbtn}" reRender="question_list" value="{!q.B__c}" styleClass="buttonStyle" style="background:LightBlue;width:150px;"/>
                    <apex:outputText value="C"/>
                    <apex:commandButton action="{!Nxtbtn}" reRender="question_list" value="{!q.C__c}" styleClass="buttonStyle" style="background:LightBlue;width:150px;"/>
                    <apex:outputText value="D"/>
                    <apex:commandButton action="{!Nxtbtn}" reRender="question_list" value="{!q.D__c}" styleClass="buttonStyle" style="background:LightBlue;width:150px;"/>
					-->
                </apex:pageBlockSection>
			</apex:repeat>
            </div>
            <table style="width: 100%">
            <tr>
    		<td>
            	<apex:outputLabel >Total Questons:{!tot}</apex:outputLabel> 
            </td>
            <td align="center">
                <apex:commandButton value="Previous" action="{!prvbtn}" disabled="{!prv}" reRender="question_list"/>
                <apex:commandButton value="Next" action="{!Nxtbtn}" disabled="{!nxt}" reRender="question_list"/>
                <apex:commandButton value="Sumbit" action="{!Nxtbtn}"/>
            </td>
            <td align="right">
            Questons per page 
            <apex:selectList value="{!rec}" size="1" >
                <apex:selectOption itemLabel="1" itemValue="1"></apex:selectOption>
                <apex:selectOption itemLabel="5" itemValue="5"></apex:selectOption>
                <apex:actionSupport event="onchange" reRender="question_list" action="{!updatePage}"/>
            </apex:selectList><br/>
            </td>
            </tr></table>
        </apex:pageBlock>
    </apex:form>
</apex:page>