<apex:page controller="CustomController" showHeader="false">
    <apex:form id="contact_list">
        <apex:pageBlock >
            <apex:pageBlockTable value="{!contacts}" var="ct" columnsWidth="20%,20%,35%,25%">
                <apex:column headerValue="FirstName">
                    <apex:outputField value="{!ct.FirstName}"/>
                </apex:column>
                <apex:column headerValue="LastName">
                    <apex:outputField value="{!ct.LastName}"/>
                </apex:column>
                <apex:column headerValue="Email">
                    <apex:outputField value="{!ct.Email}"/>
                </apex:column>
                <apex:column headerValue="Phone">
                    <apex:outputField value="{!ct.Phone}"/>
                </apex:column>
            </apex:pageBlockTable>
            <table style="width: 100%">
            <tr>
    		<td>
            	<apex:outputLabel >Total Records:{!tot}</apex:outputLabel> 
            </td>
            <td align="center">
                <apex:commandButton value="Previous" action="{!prvbtn}" disabled="{!prv}" reRender="contact_list"/>
                <apex:commandButton value="Next" action="{!Nxtbtn}" disabled="{!nxt}" reRender="contact_list"/>
            </td>
            <td align="right">
            Records per page 
            <apex:selectList value="{!rec}" size="1" >
                <apex:selectOption itemLabel="5" itemValue="5"></apex:selectOption>
                <apex:selectOption itemLabel="20" itemValue="20"></apex:selectOption>
                <apex:actionSupport event="onchange" reRender="contact_list" action="{!updatePage}"/>
            </apex:selectList><br/>
            </td>
            </tr></table>
        </apex:pageBlock>
    </apex:form>
</apex:page>
